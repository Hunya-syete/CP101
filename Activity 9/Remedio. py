word_bank = []

while True:
    
    word = input("Enter a word: ")
    word_bank.append(word)  
    
    choice = input("Do you want to try again? (Yes for Y/y, No for N/n): ").lower()

    
    if choice == 'n':
        break  


print("\nThank you!")
print(f"Total number of words: {len(word_bank)}")
print("Words entered:")
for word in word_bank:
    print(word)
    
